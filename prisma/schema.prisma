generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models for the marketplace

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  full_name    String
  tipo_usuario String
  avatar_url   String?
  telefone     String?
  documento    String?
  // removed ambiguous relation to `Revenda` (handled via `owner_revendas` and `owner_id` on `Revenda`)
  created_at   DateTime  @default(now())
  Revendas     Revenda[] @relation("owner_revendas")
}

model Revenda {
  id            String   @id @default(uuid())
  owner_id      String
  nome          String
  cnpj          String
  endereco      String
  cidade        String
  estado        String
  telefone      String
  email_contato String?
  website       String?
  logo_url      String?
  ativo         Boolean  @default(true)
  created_at    DateTime @default(now())

  owner    User      @relation("owner_revendas", fields: [owner_id], references: [id])
  Veiculos Veiculo[]
  Anuncios Anuncio[]
  // removed ambiguous back-reference to users; use `owner_id` + `owner_revendas` relation instead
}

model Veiculo {
  id          String   @id @default(uuid())
  revenda_id  String
  placa       String
  chassi      String
  marca       String
  modelo      String
  ano         Int
  valor       Float
  km          Int
  combustivel String?
  cor         String?
  status      String
  descricao   String?
  fotos       String?
  created_at  DateTime @default(now())

  revenda Revenda   @relation(fields: [revenda_id], references: [id])
  Anuncio Anuncio[]
}

model Anuncio {
  id            String   @id @default(uuid())
  estoque_id    String
  revenda_id    String
  titulo        String
  descricao     String?
  preco         Float
  cidade        String
  estado        String
  visitas       Int      @default(0)
  ativo         Boolean  @default(true)
  foto_url      String?
  thumbnail_url String?
  created_at    DateTime @default(now())

  revenda Revenda @relation(fields: [revenda_id], references: [id])
  veiculo Veiculo @relation(fields: [estoque_id], references: [id])
}
